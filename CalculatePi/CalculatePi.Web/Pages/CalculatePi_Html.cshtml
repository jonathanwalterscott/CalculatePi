@page
@model CalculatePi.Web.Pages.CalculatePiModel
@{
    ViewData["Title"] = "CalculatePi";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<html>
<body>
    <h1>CalculatePi</h1>
    <div asp-validation-summary="All"></div>
    <form method="POST">
        <div>Model: <select asp-for="ModelToUse" asp-items="Model.Models"><option value="">Pick one</option></select></div>
        <div>Iterations: <input asp-for="Iterations" /> <input type="submit" value="Calculate"/></div>
        <div>@Model.Result</div>
    </form>
</body>
</html>
