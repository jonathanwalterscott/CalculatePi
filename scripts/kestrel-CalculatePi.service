[Unit]
Description=AWS CodeStar Sample ASP.NET Core Web Application

[Service]
WorkingDirectory=/home/www-user/calculatepi/
ExecStart=/bin/dotnet /home/www-user/calculatepi/CalculatePi.Web.dll --urls https://localhost:5001 &
Restart=always
# Restart service after 10 seconds if dotnet service crashes
RestartSec=10
SyslogIdentifier=CalculatePi
User=root
Environment=ASPNETCORE_ENVIRONMENT=Production 

[Install]
WantedBy=multi-user.target
